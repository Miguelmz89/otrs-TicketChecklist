<div class="WidgetSimple">
    <div class="Header">
        <div class="WidgetAction Toggle">
            <a href="#" title="Inhalt anzeigen oder ausblenden" aria-controls="Core_UI_AutogeneratedID_1" aria-expanded="true"><i class="fa fa
        </div>
        <h2>$Text{"Ticket Checklist"}</h2>
    </div>
    <div class="Content">
        <fieldset class="TableLike FixedLabelSmall">
            <input type="hidden" id="ChecklistTicketID" name="ChecklistTicketID" value="$QData{"TicketID"}" />
