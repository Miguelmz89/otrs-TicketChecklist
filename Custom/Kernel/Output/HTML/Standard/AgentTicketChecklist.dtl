<div class="LayoutPopup ARIARoleMain">
    <div class="Header">
        <h1>$Text{"Manage Checklist for ticket"}: $QData{"TicketNumber"} - $QData{"Title"}</h1>
        <p>
            <a class="CancelClosePopup" href="#">$Text{"Cancel & close window"}</a>
        </p>
    </div>

    <div class="Content">
        <div class="LayoutFixedSidebar SidebarLast">
            <div class="ContentColumn">
                <div class="Content">
                    <form action="$Env{"CGIHandle"}" id="MainForm" method="post" name="compose" class="Validate">
                        <input type="hidden" name="Action" value="$Env{"Action"}"/>
                        <input type="hidden" name="Subaction" value="Save"/>
                        <input type="hidden" name="TicketID" value="$QData{"TicketID"}" id="TicketID"/>
<script type="text/javascript">
//<![CDATA[
    var Positions = '$QData{"Position"}';
//]]>
</script>
<ol id="ChecklistItems">

<!-- dtl:block:Item -->
                       <li id="Item_$QData{"Position"}"> <input type="text" id="ItemTitle_$QData{"Position"}" name="ItemTitle_$QData{"Position"}" value="$QData{"Title"}" />
                        $Data{"StatusSelect"}
                        <input type="hidden" name="ItemID_$QData{"Position"}" id="ItemID_$QData{"Position"}" value="$QData{"ID"}" />
                        <button name="DelBtn" id="DelBtn_$QData{"Position"}" class="DelBtn" value="-">-</button>
                       </li>
<!-- dtl:block:Item -->
</ol>

                            <div class="Field">
                                <button class="CallForAction Primary" id="AddBtn" accesskey="g" title="$Text{"+"} (g)" type="submit" value="$Text{"+"}"><span>$Text{"+"}</span></button>

                                <button class="CallForAction Primary" id="Submit" accesskey="g" title="$Text{"Submit"} (g)" type="submit" value="$Text{"Submit"}"><span>$Text{"Submit"}</span></button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="Clear"></div>
        </div>

        <div id="ChecklistTickets"></div>

    </div>
    <div class="Footer"></div>
</div>
